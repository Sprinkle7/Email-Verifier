[Unit]
Description=Email Verifier API Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/email_verifier
Environment="PATH=/home/ubuntu/email_verifier/venv/bin"
Environment="PORT=5000"
ExecStart=/home/ubuntu/email_verifier/venv/bin/gunicorn app:app --bind 0.0.0.0:5000 --workers 4 --timeout 60
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
